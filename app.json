{
  "expo": {
    "name": "ToDoList-React-Native",
    "slug": "ToDoList-React-Native",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "scheme": "ToDoList-Express",
    "newArchEnabled": true,
    "entryPoint": "expo-router/entry",
    "ios": {
    "infoPlist": {
      "NSCameraUsageDescription": "Esta aplicación necesita acceder a la cámara para tomar fotos.",
      "NSPhotoLibraryUsageDescription": "Esta aplicación necesita acceder a la galería para seleccionar imágenes."
    }
  },
    "android": {
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },

    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}